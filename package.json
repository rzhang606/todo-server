{
  "name": "fullstackopen-backend",
  "version": "1.0.0",
  "description": "Backend for fullstack open exercises",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "test": "echo \"Error: no test specified\" && exit 1",
